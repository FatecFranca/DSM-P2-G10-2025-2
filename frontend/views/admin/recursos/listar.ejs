<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../../partials/head', { title: 'Gerenciar Recursos - E-DUCA' }) %>
</head>
<body>
    <div class="d-flex">
        <%- include('../partials/admin-sidebar', { currentPage: 'recursos' }) %>
        
        <div class="main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Gerenciar Recursos</h1>
                <a href="/admin/recursos/criar" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Novo Recurso
                </a>
            </div>

            <div class="card shadow mb-4">
                <div class="card-body">
                    <form method="GET" action="/admin/recursos" class="row g-3">
                        <div class="col-md-4">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">Todos os Status</option>
                                <option value="ativos" <%= filtros.status === 'ativos' ? 'selected' : '' %>>Ativos</option>
                                <option value="inativos" <%= filtros.status === 'inativos' ? 'selected' : '' %>>Inativos</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="etapa" class="form-label">Etapa Educacional</label>
                            <select class="form-select" id="etapa" name="etapa">
                                <option value="">Todas as Etapas</option>
                                <option value="Basico" <%= filtros.etapa === 'Basico' ? 'selected' : '' %>>Básico</option>
                                <option value="Fundamental" <%= filtros.etapa === 'Fundamental' ? 'selected' : '' %>>Fundamental</option>
                                <option value="Medio" <%= filtros.etapa === 'Medio' ? 'selected' : '' %>>Médio</option>
                                <option value="Tecnico" <%= filtros.etapa === 'Tecnico' ? 'selected' : '' %>>Técnico</option>
                                <option value="Superior" <%= filtros.etapa === 'Superior' ? 'selected' : '' %>>Superior</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                            <a href="/admin/recursos" class="btn btn-outline-secondary">Limpar</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 fw-bold text-primary">
                        Lista de Recursos
                        <% if (filtros.status || filtros.etapa) { %>
                            <small class="text-muted ms-2">(Filtrado)</small>
                        <% } %>
                    </h6>
                    <span class="badge bg-secondary">
                        <%= paginacao.totalRecursos %> recursos
                    </span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Título</th>
                                    <th>Descrição</th>
                                    <th>Etapa</th>
                                    <th>Status</th>
                                    <th>Data Criação</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recursos.forEach(recurso => { %>
                                <tr>
                                    <td><%= recurso.id %></td>
                                    <td>
                                        <strong><%= recurso.titulo %></strong>
                                        <% if (recurso.link_externo) { %>
                                            <br><small class="text-muted">
                                                <a href="<%= recurso.link_externo %>" target="_blank" class="text-decoration-none">
                                                    <i class="bi bi-box-arrow-up-right"></i> Link externo
                                                </a>
                                            </small>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <%= recurso.descricao ? (recurso.descricao.length > 100 ? 
                                                recurso.descricao.substring(0, 100) + '...' : recurso.descricao) : 'Sem descrição' %>
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info"><%= recurso.etapa %></span>
                                    </td>
                                    <td>
                                        <% if (recurso.ativo) { %>
                                            <span class="badge bg-success">Ativo</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inativo</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <small><%= new Date(recurso.data_criacao).toLocaleDateString('pt-BR') %></small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <!-- Editar -->
                                            <a href="/admin/recursos/editar/<%= recurso.id %>" class="btn btn-sm btn-outline-primary">
                                                Editar
                                            </a>
                                            
                                            <!-- Ativar/Desativar -->
                                            <button class="btn btn-sm btn-outline-secondary btn-toggle-status" 
                                                    data-id="<%= recurso.id %>" 
                                                    data-status="<%= recurso.ativo === 1 %>">
                                                <%= recurso.ativo === 1 ? 'Desativar' : 'Ativar' %>
                                            </button>

                                            <!-- Visualizar -->
                                            <a href="/recursos/<%= recurso.id %>" 
                                            class="btn btn-outline-info btn-sm" target="_blank">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <!-- Excluir -->
                                            <button class="btn btn-sm btn-outline-danger btn-excluir" 
                                                    data-id="<%= recurso.id %>">
                                                Excluir
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <% if (paginacao.totalPages > 1) { %>
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% for (let i = 1; i <= paginacao.totalPages; i++) { %>
                            <li class="page-item <%= i === paginacao.paginaAtual ? 'active' : '' %>">
                                <a class="page-link" 
                                   href="/admin/recursos?page=<%= i %><%= filtros.status ? '&status=' + filtros.status : '' %><%= filtros.etapa ? '&etapa=' + filtros.etapa : '' %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
    
    <!-- Incluir o arquivo JavaScript externo -->
    <script src="/js/recursos-admin.js"></script>
</body>
</html>