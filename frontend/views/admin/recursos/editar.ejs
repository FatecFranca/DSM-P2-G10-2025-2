<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../../partials/head', { title: 'Editar Recurso - E-DUCA' }) %>
</head>
<body>
    <div class="d-flex">
        <%- include('../partials/admin-sidebar', { currentPage: 'recursos' }) %>
        
        <div class="main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Editar Recurso</h1>
                <div>
                    <a href="/admin/recursos" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left me-1"></i> Voltar
                    </a>
                    <a href="/recursos/<%= recurso.id %>" target="_blank" class="btn btn-outline-info">
                        <i class="bi bi-eye me-1"></i> Visualizar
                    </a>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 fw-bold text-primary">Editar Recurso #<%= recurso.id %></h6>
                            <span class="badge bg-<%= recurso.ativo ? 'success' : 'danger' %>">
                                <%= recurso.ativo ? 'Ativo' : 'Inativo' %>
                            </span>
                        </div>
                        <div class="card-body">
                            <% if (typeof erro !== 'undefined') { %>
                                <div class="alert alert-danger"><%= erro %></div>
                            <% } %>

                            <form method="POST" action="/admin/recursos/editar/<%= recurso.id %>">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="titulo" class="form-label">Título do Recurso *</label>
                                        <input type="text" class="form-control" id="titulo" name="titulo" 
                                               value="<%= recurso.titulo %>" required>
                                    </div>

                                    <div class="col-md-12 mb-3">
                                        <label for="descricao" class="form-label">Descrição *</label>
                                        <textarea class="form-control" id="descricao" name="descricao" 
                                                  rows="4" required><%= recurso.descricao %></textarea>
                                    </div>

                                    <div class="col-md-12 mb-3">
                                        <label for="link_externo" class="form-label">Link Externo *</label>
                                        <input type="url" class="form-control" id="link_externo" name="link_externo" 
                                               value="<%= recurso.link_externo %>" required>
                                    </div>

                                    <div class="col-md-12 mb-3">
                                        <label for="etapa" class="form-label">Etapa Educacional *</label>
                                        <select class="form-select" id="etapa" name="etapa" required>
                                            <option value="Basico" <%= recurso.etapa.includes('Basico') ? 'selected' : '' %>>Educação Básica</option>
                                            <option value="Fundamental" <%= recurso.etapa.includes('Fundamental') ? 'selected' : '' %>>Ensino Fundamental</option>
                                            <option value="Medio" <%= recurso.etapa.includes('Medio') ? 'selected' : '' %>>Ensino Médio</option>
                                            <option value="Tecnico" <%= recurso.etapa.includes('Tecnico') ? 'selected' : '' %>>Educação Profissional</option>
                                            <option value="Superior" <%= recurso.etapa.includes('Superior') ? 'selected' : '' %>>Educação Superior</option>
                                            <option value="Basico,Fundamental,Medio" <%= recurso.etapa === 'Basico,Fundamental,Medio' ? 'selected' : '' %>>Básico, Fundamental e Médio</option>
                                            <option value="Tecnico,Superior" <%= recurso.etapa === 'Tecnico,Superior' ? 'selected' : '' %>>Profissional e Superior</option>
                                        </select>
                                    </div>

                                    <div class="col-md-12 mb-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="ativo" name="ativo" 
                                                   <%= recurso.ativo ? 'checked' : '' %>>
                                            <label class="form-check-label" for="ativo">
                                                Recurso Ativo (visível no site público)
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-check-circle me-1"></i> Atualizar Recurso
                                            </button>
                                            <a href="/admin/recursos" class="btn btn-outline-secondary">Cancelar</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card shadow mt-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 fw-bold text-info">Informações do Recurso</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>ID:</strong> <%= recurso.id %></p>
                                    <p><strong>Data de Criação:</strong> <%= recurso.data_criacao.toLocaleString('pt-BR') %></p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Última Atualização:</strong> 
                                        <%= recurso.data_atualizacao ? recurso.data_atualizacao.toLocaleString('pt-BR') : 'N/A' %>
                                    </p>
                                    <p><strong>Status:</strong> 
                                        <span class="badge bg-<%= recurso.ativo ? 'success' : 'danger' %>">
                                            <%= recurso.ativo ? 'Ativo' : 'Inativo' %>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
    
    <!-- Incluir o arquivo JavaScript externo -->
    <script src="/js/recursos-form.js"></script>
</body>
</html>