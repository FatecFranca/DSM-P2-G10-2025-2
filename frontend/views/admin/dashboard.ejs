<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head', { title: 'Dashboard Admin - E-DUCA' }) %>
</head>
<body>
    <div class="d-flex">
        <%- include('./partials/admin-sidebar', { currentPage: 'dashboard' }) %>
        
        <div class="main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Dashboard Administrativo</h1>
                <div class="text-muted">
                    <small>Última atualização: <span id="current-time"><%= new Date().toLocaleString('pt-BR') %></span></small>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card users h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col me-2">
                                    <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                        Total de Usuários
                                    </div>
                                    <div class="h5 mb-0 fw-bold">
                                        <%= stats.total_usuarios %>
                                    </div>
                                    <div class="mt-2 mb-0 text-muted text-xs">
                                        <span class="text-success me-2">
                                            <i class="bi bi-arrow-up"></i> <%= stats.total_admins %> admins
                                        </span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-people text-gray-300 fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card resources h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col me-2">
                                    <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                        Recursos Ativos
                                    </div>
                                    <div class="h5 mb-0 fw-bold">
                                        <%= stats.recursos_ativos %>
                                    </div>
                                    <div class="mt-2 mb-0 text-muted text-xs">
                                        <span class="text-danger me-2">
                                            <i class="bi bi-arrow-down"></i> <%= stats.recursos_inativos %> inativos
                                        </span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-book text-gray-300 fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card pending h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col me-2">
                                    <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                        Recursos Pendentes
                                    </div>
                                    <div class="h5 mb-0 fw-bold">
                                        <%= stats.recursos_inativos %>
                                    </div>
                                    <div class="mt-2 mb-0 text-muted text-xs">
                                        <span>Requerem moderação</span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-clock text-gray-300 fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stat-card news h-100">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col me-2">
                                    <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                        Notícias
                                    </div>
                                    <div class="h5 mb-0 fw-bold">
                                        <%= stats.noticias_publicadas %>
                                    </div>
                                    <div class="mt-2 mb-0 text-muted text-xs">
                                        <span class="text-warning me-2">
                                            <i class="bi bi-calendar"></i> <%= stats.noticias_agendadas %> agendadas
                                        </span>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-newspaper text-gray-300 fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 fw-bold text-primary">Recursos Pendentes</h6>
                            <a href="/admin/recursos?status=inativos" class="btn btn-sm btn-primary">Ver Todos</a>
                        </div>
                        <div class="card-body">
                            <% if (recursosPendentes.length > 0) { %>
                                <div class="list-group list-group-flush">
                                    <% recursosPendentes.forEach(recurso => { %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1"><%= recurso.titulo %></h6>
                                            <small class="text-muted">Etapa: <%= recurso.etapa %></small>
                                        </div>
                                        <div>
                                            <small class="text-muted me-2">
                                                <%= recurso.data_criacao.toLocaleDateString('pt-BR') %>
                                            </small>
                                            <a href="/admin/recursos/editar/<%= recurso.id %>" 
                                               class="btn btn-sm btn-outline-primary">Revisar</a>
                                        </div>
                                    </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="bi bi-check-circle text-success fs-2 mb-2"></i>
                                    <p class="text-muted">Nenhum recurso pendente de moderação</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 fw-bold text-success">Usuários Recentes</h6>
                            <a href="/admin/usuarios" class="btn btn-sm btn-success">Ver Todos</a>
                        </div>
                        <div class="card-body">
                            <% if (usuariosRecentes.length > 0) { %>
                                <div class="list-group list-group-flush">
                                    <% usuariosRecentes.forEach(usuario => { %>
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1"><%= usuario.email %></h6>
                                                <small class="text-muted">
                                                    <%= usuario.cidade || 'N/A' %> - <%= usuario.estado || 'N/A' %>
                                                </small>
                                            </div>
                                            <small class="text-muted">
                                                <%= usuario.data_cadastro.toLocaleDateString('pt-BR') %>
                                            </small>
                                        </div>
                                    </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="bi bi-person-plus text-muted fs-2 mb-2"></i>
                                    <p class="text-muted">Nenhum usuário recente</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 fw-bold text-primary">Ações Rápidas</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3 mb-3">
                                    <a href="/admin/recursos/criar" class="btn btn-primary btn-block py-3">
                                        <i class="bi bi-plus-circle fs-2 mb-2"></i><br>
                                        Novo Recurso
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a href="/admin/usuarios" class="btn btn-success btn-block py-3">
                                        <i class="bi bi-people fs-2 mb-2"></i><br>
                                        Gerenciar Usuários
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a href="/admin/recursos" class="btn btn-info btn-block py-3">
                                        <i class="bi bi-book fs-2 mb-2"></i><br>
                                        Todos os Recursos
                                    </a>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <a href="/admin/relatorios" class="btn btn-warning btn-block py-3">
                                        <i class="bi bi-graph-up fs-2 mb-2"></i><br>
                                        Relatórios
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updateTime() {
            const now = new Date();
            document.getElementById('current-time').textContent = 
                now.toLocaleString('pt-BR');
        }
        setInterval(updateTime, 60000);
    </script>

    <%- include('../partials/footer') %>
</body>
</html>