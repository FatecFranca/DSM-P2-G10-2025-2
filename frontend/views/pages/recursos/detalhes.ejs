<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../../partials/head', { 
        title: recurso.titulo + ' - E-DUCA',
        description: recurso.descricao ? recurso.descricao.substring(0, 160) : 'Recurso educacional da plataforma E-DUCA'
    }) %>
</head>
<body>
    <%- include('../../partials/navbar', { user: user }) %>
    
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Início</a></li>
                <li class="breadcrumb-item"><a href="/recursos">Recursos</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <%= recurso.titulo.length > 30 ? recurso.titulo.substring(0, 30) + '...' : recurso.titulo %>
                </li>
            </ol>
        </nav>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h1 class="h4 mb-0"><%= recurso.titulo %></h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="text-muted">Descrição</h5>
                        <p class="card-text"><%= recurso.descricao || 'Descrição não disponível.' %></p>
                        
                        <div class="mt-4">
                            <h5 class="text-muted">Informações do Recurso</h5>
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Etapa(s) Educacional(is):</strong><br>
                                    <span class="badge bg-primary fs-6 mt-1"><%= recurso.etapa %></span>
                                </div>
                                <% if (recurso.disciplina) { %>
                                <div class="col-sm-6">
                                    <strong>Disciplina:</strong><br>
                                    <span class="badge bg-secondary fs-6 mt-1"><%= recurso.disciplina %></span>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Acesse o Recurso</h6>
                                <p class="small text-muted">
                                    Você será redirecionado para o site externo
                                </p>
                                <a href="<%= recurso.link_externo %>" 
                                   target="_blank" 
                                   rel="noopener noreferrer"
                                   class="btn btn-success btn-lg w-100 mb-2">
                                    <i class="bi bi-link-45deg"></i> Acessar Recurso
                                </a>
                                <small class="text-muted">
                                    Link externo verificado
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <% if (recurso.tipo || recurso.formato || recurso.duracao) { %>
                <div class="mt-4 pt-3 border-top">
                    <h5 class="text-muted">Detalhes Técnicos</h5>
                    <div class="row">
                        <% if (recurso.tipo) { %>
                        <div class="col-sm-4">
                            <strong>Tipo:</strong> <%= recurso.tipo %>
                        </div>
                        <% } %>
                        <% if (recurso.formato) { %>
                        <div class="col-sm-4">
                            <strong>Formato:</strong> <%= recurso.formato %>
                        </div>
                        <% } %>
                        <% if (recurso.duracao) { %>
                        <div class="col-sm-4">
                            <strong>Duração:</strong> <%= recurso.duracao %>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="/recursos" class="btn btn-outline-secondary">
                        ← Voltar para Recursos
                    </a>
                    <small class="text-muted">
                        ID: <%= recurso.id %>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
    
    <!-- Script para tracking de cliques (opcional - manter se for usado) -->
    <script>
        document.querySelector('a[target="_blank"]').addEventListener('click', function() {
            // Aqui você pode adicionar analytics para track de cliques
            // Exemplo: Google Analytics ou outro sistema de tracking
        });
    </script>
</body>
</html>