<!-- Script de inicialização SEGURO -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Inicialização segura dos componentes Bootstrap
    if (typeof bootstrap !== 'undefined' && typeof inicializarComponentesBootstrap !== 'undefined') {
        inicializarComponentesBootstrap();
    } else {
        console.warn('Bootstrap ou função de inicialização não disponíveis');
        // Tentar novamente após um delay
        setTimeout(() => {
            if (typeof bootstrap !== 'undefined' && typeof inicializarComponentesBootstrap !== 'undefined') {
                inicializarComponentesBootstrap();
            }
        }, 500);
    }
});
</script>

